<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#484E61">
       <!-- <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/switch_city"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/home"
            />-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/menu_button"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_width="30dp"
            android:background="@drawable/home">
        </android.support.v7.widget.Toolbar>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/city_name"
            android:layout_centerInParent="true"
            android:textSize="24sp"
            android:textColor="#fff"
            android:text="头"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/refresh_weather"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/refresh"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="#27A5F9">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/publish_text"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:text="publish_text"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/weather_info_layout"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/current_date"
                android:gravity="center"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:text="current_date"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/weather_desp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#FFF"
                android:textSize="40dp"
                android:text="weather_desp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temp1"
                    android:layout_gravity="center_vertical"
                    android:textSize="40dp"
                    android:textColor="#FFF"
                    android:text="temp1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="~"
                    android:textColor="#FFF"
                    android:textSize="40sp"
                    />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temp2"
                    android:layout_gravity="center_vertical"
                    android:textColor="#FFF"
                    android:textSize="40sp"
                    android:text="temp2"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/yesterday"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/yesterday1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:text="昨天"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/yesterday1"
                android:id="@+id/yesterday2"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/yesterday2"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/yesterday3"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="yesterday3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="/"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/yesterday4"
                    android:text="yesterday4"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/today"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/today1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:text="今天"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/today1"
                android:id="@+id/today2"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/today2"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/today3"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="today3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="/"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/today4"
                    android:text="today4"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tommorowB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/tommorowB1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:text="明天"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/tommorowB1"
                android:id="@+id/tommorowB2"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/tommorowB2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tommorowB3"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="tommorowB3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="/"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tommorowB4"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:text="tommorowB4"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tommorowC"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:id="@+id/tommorowC1"
                android:text="tommorowC1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/tommorowC1"
                android:id="@+id/tommorowC2"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/tommorowC2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tommorowC3"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="tommorowC3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="/"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tommorowC4"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="tommorow4"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/tommorowD">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/tommorowD1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:text="tommorowD1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/tommorowD2"
                android:layout_below="@id/tommorowD1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tommorowD2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tommorowD3"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="tommorowD3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="/"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tommorowD4"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="tommorowD4"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/tommorowE">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/tommorowE1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:text="tommorowE1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/tommorowE2"
                android:layout_below="@id/tommorowE1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tommorowE2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tommorowE3"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="tommorowD3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="/"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tommorowE4"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="tommorowD4"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="140dp"
            android:layout_centerHorizontal="true"
            android:text="数据来源 中华万年历"/>
    </RelativeLayout>
</LinearLayout>